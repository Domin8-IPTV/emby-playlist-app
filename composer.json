{
    "name": "dmcblue/emby-playlist-app",
    "description": "Web app you can locally host on the same server as your Emby setup to more easily create playlists.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "dmcblue",
            "email": "dmcblue@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "propel/propel": "^2.0@dev",
        "vlucas/phpdotenv": "^2.5@dev",
        "leafo/scssphp": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "EmbyPlaylistApp\\": "src/EmbyPlaylistApp/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "propel:diff" : ["propel diff"],
        "propel:migrate" : ["propel migrate"],
        "propel:build" : ["propel sql:build && propel model:build && composer dump-autoload"],
        "build:styles" : ["php styles/build.php"],
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
